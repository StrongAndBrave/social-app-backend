{
  "name": "social-app-backend",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "build:main-gateway": "nest build main-gateway",
    "build:files-microservice": "nest build files-microservice",
    "build:payments-microservice": "nest build payments-microservice",
    "start": "cross-env NODE_ENV=PRODUCTION nest start main-gateway",
    "start:dev": "cross-env NODE_ENV=DEVELOPMENT nest start --watch",
    "start:debug": "cross-env NODE_ENV=DEVELOPMENT nest start --debug --watch",
    "start:prod": "cross-env NODE_ENV=PRODUCTION node dist/apps/main-gateway/main.js",
    "start:main-gateway": "nest start main-gateway",
    "start:dev:main-gateway": "cross-env NODE_ENV=development nest start main-gateway --watch",
    "start:prod:main-gateway": "cross-env NODE_ENV=PRODUCTION node dist/apps/main-gateway/main.js",
    "start:files-microservice": "nest start files-microservice",
    "start:payments-microservice": "cross-env NODE_ENV=PRODUCTION node dist/apps/payments-microservice/main.js",
    "start:dev:files-microservice": "cross-env NODE_ENV=DEVELOPMENT nest start files-microservice --watch",
    "start:dev:payments-microservice": "cross-env NODE_ENV=DEVELOPMENT nest start payments-microservice --watch",
    "start:prod:files-microservice": "cross-env NODE_ENV=PRODUCTION node dist/apps/files-microservice/main.js",
    "start:prod:payments-microservice": "cross-env NODE_ENV=PRODUCTION node dist/apps/payments-microservice/main.js",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "cross-env NODE_ENV=DEVELOPMENT node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e:files-microservice": "cross-env NODE_ENV=DEVELOPMENT jest --config apps/files-microservice/test/jest-e2e.json",
    "test:e2e:payments-microservice": "cross-env NODE_ENV=DEVELOPMENT jest --config apps/payments-microservice/test/jest-e2e.json",
    "test:e2e": "dotenv -e .env.development.local --jest --config apps/main-gateway/test/jest-e2e.json",
    "swagger:generate": "cross-env NODE_ENV=DEVELOPMENT nest build && node dist/apps/main-gateway/main.js --swagger",
    "migrate:dev:main": "dotenv -e .env.development.local -- npx prisma migrate dev --schema=apps/main-gateway/prisma/schema.prisma",
    "migrate:dev:files": "dotenv -e .env.development.local -- npx prisma migrate dev --schema=apps/files-microservice/prisma/schema.prisma",
    "migrate:dev:payments": "dotenv -e .env.development.local -- npx prisma migrate dev --schema=apps/payments-microservice/prisma/schema.prisma",
    "migrate:prod:main": "npx prisma migrate deploy --schema=apps/main-gateway/prisma/schema.prisma",
    "migrate:prod:files": "npx prisma migrate deploy --schema=apps/files-microservice/prisma/schema.prisma",
    "migrate:prod:payments": "npx prisma migrate deploy --schema=apps/payments-microservice/prisma/schema.prisma"
  },
  "dependencies": {
    "@nestjs-modules/mailer": "^2.0.2",
    "@nestjs/common": "^10.0.0",
    "@nestjs/config": "^3.3.0",
    "@nestjs/core": "^10.0.0",
    "@nestjs/cqrs": "^10.2.8",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/microservices": "^10.4.7",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/swagger": "^8.1.0",
    "@nestjs/throttler": "^6.3.0",
    "@prisma/client": "^6.0.1",
    "@types/passport-jwt": "^4.0.1",
    "@types/passport-local": "^1.0.38",
    "amqp-connection-manager": "^4.1.14",
    "amqplib": "^0.10.4",
    "bcrypt": "^5.1.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "date-fns": "^4.1.0",
    "dotenv": "^16.4.5",
    "handlebars": "^4.7.8",
    "nodemailer": "^6.9.16",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/nodemailer": "^6.4.17",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "./",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
